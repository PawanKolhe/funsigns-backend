{
  "kind": "collectionType",
  "collectionName": "students",
  "info": {
    "name": "Student",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "userId": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "profilePic": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "assignments_completed": {
      "collection": "assignment"
    },
    "badges": {
      "collection": "badge"
    },
    "points": {
      "type": "integer",
      "default": 0,
      "min": 0
    }
  }
}
